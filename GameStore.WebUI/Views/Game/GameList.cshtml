@using GameStore.WebUI.Models;
@model GamesListViewModel

@{
    ViewBag.Title = "Games";
}

<h1>All Games In The Store:</h1>

@foreach(var p in @Model.Games)
{
    <div>
        <h3>@p.Name</h3>
        <p>@p.Description</p>
        <h4>$@p.Price</h4>
    </div>
}
<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("GameList", new { page = x }))
</div>
